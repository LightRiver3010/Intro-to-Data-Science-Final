library(gganimate)
theme_set(theme_bw())
install.packages("Lahman")
library(Lahman)
install.packages("gifski")
library(gifski)
install.packages("gapminder")
library(gapminder)
head(gapminder)

#Testing Animated Graphs without proper Data (Sebastian was cleaning it up)

#1 - Animated Scatter Plot
p <- ggplot(
  gapminder,
  aes(x= gdpPercap, y=lifeExp, size=pop, color=country) 
) +
  geom_point(show.legend=FALSE, alpha=0.7) +
  scale_color_viridis_d() +
  scale_size(range=c(2,12)) +
  scale_x_log10() +
  labs(x="GDP per capital", y="Life expectancy") +
  transition_time(year) +
  labs(title = "Year: {frame_time}") +
  ease_aes('linear') +
  shadow_wake(wake_length = 0.1, alpha =FALSE)
  
animate(p, renderer = gifski_renderer())

#Attempting to isolate a specific column 
df1 <- filter(p, continent = 'Asia')
df1 <- p
df1 <- filter(p, continent = 'Asia')



#2 - Animated Line Graph
g <- ggplot(
  gapminder,
  aes(x=year, y=gdpPercap)
) +
  geom_line() +
  scale_color_viridis_b() +
  labs(x= "Year", y= "GDP Percap") +
  transition_reveal(year) +
  geom_point()
animate(g, renderer = gifski_renderer())
